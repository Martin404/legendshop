<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--  LegendShop 版权所有 2009-2011,并保留所有权利。 -->
<hibernate-mapping>
    <class name="com.legendshop.model.entity.Pub" table="ls_pub">
       <cache usage="read-write"/>
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="title" type="java.lang.String">
            <column name="title" length="50" not-null="true">
                <comment>标题</comment>
            </column>
        </property>
        <property name="msg" type="java.lang.String">
            <column name="msg" not-null="true">
                <comment>内容</comment>
            </column>
        </property>
        <property name="date" type="java.util.Date">
            <column name="rec_date" length="19" not-null="true">
                <comment>录入时间</comment>
            </column>
        </property>
        <property name="userId" type="java.lang.String">
            <column name="user_id" length="32" not-null="true">
                <comment>用户ID</comment>
            </column>
        </property>
        <property name="userName" type="java.lang.String">
            <column name="user_name" length="100">
                <comment>订购用户名称</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
