<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--  LegendShop 版权所有 2009-2011,并保留所有权利。 -->
<hibernate-mapping>
    <class name="com.legendshop.model.entity.UserGrade" table="ls_usr_grad">
        <id name="gradeId" type="java.lang.Integer">
            <column name="grade_id" />
            <generator class="assigned" />
        </id>
        <property name="name" type="java.lang.String">
            <column name="name" length="50">
                <comment>名称</comment>
            </column>
        </property>
        <property name="maxSortSize" type="java.lang.Integer">
            <column name="max_sort_size">
                <comment>允许的最大展柜</comment>
            </column>
        </property>
        <property name="maxNsortSize" type="java.lang.Integer">
            <column name="max_nsort_size">
                <comment>允许的最大展柜分类</comment>
            </column>
        </property>
        <property name="maxProd" type="java.lang.Integer">
            <column name="max_prod">
                <comment>允许的最大产品数</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
