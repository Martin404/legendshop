<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--  LegendShop 版权所有 2009-2011,并保留所有权利。 -->
<hibernate-mapping>
    <class name="com.legendshop.model.entity.Logo" table="ls_logo">
        <cache usage="read-write"/>
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="banner" type="java.lang.String">
            <column name="banner" length="300">
                <comment>标语位置</comment>
            </column>
        </property>
        <property name="url" type="java.lang.String">
            <column name="url" length="50">
                <comment>连接地址</comment>
            </column>
        </property>
        <property name="userId" type="java.lang.String">
            <column name="user_id" length="32">
                <comment>发表人ID</comment>
            </column>
        </property>
        <property name="userName" type="java.lang.String">
            <column name="user_name" length="100">
                <comment>用户名称,备用</comment>
            </column>
        </property>
        <property name="memo" type="java.lang.String">
            <column name="memo" length="50">
                <comment>用户名称,备用</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
