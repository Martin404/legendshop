<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--  LegendShop 版权所有 2009-2011,并保留所有权利。 -->
<hibernate-mapping>
    <class name="com.legendshop.model.entity.PayType" table="ls_pay_type">
        <id name="payId" type="java.lang.Long">
            <column name="pay_id" />
            <generator class="native" />
        </id>
        <property name="userName" type="java.lang.String">
            <column name="user_name" length="32" not-null="true" />
        </property>
        <property name="payTypeId" type="java.lang.Integer">
            <column name="pay_type_id" not-null="true" />
        </property>
        <property name="payTypeName" type="java.lang.String">
            <column name="pay_type_name" length="50">
                <comment>付款方式</comment>
            </column>
        </property>
        <property name="partner" type="java.lang.String">
            <column name="partner" length="100">
                <comment>partner</comment>
            </column>
        </property>
        <property name="validateKey" type="java.lang.String">
            <column name="validate_key" length="512">
                <comment>校验码，加密放于数据库</comment>
            </column>
        </property>
        <property name="sellerEmail" type="java.lang.String">
            <column name="seller_email" length="100">
                <comment>签约支付宝账号或卖家收款支付宝帐户</comment>
            </column>
        </property>
        <property name="memo" type="java.lang.String">
            <column name="memo" length="100">
                <comment>备注</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
