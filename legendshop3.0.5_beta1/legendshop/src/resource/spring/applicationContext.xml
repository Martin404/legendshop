<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<import resource="legendshop/applicationContext-aop.xml" />
	<import resource="legendshop/applicationContext-db.xml" />
	<import resource="legendshop/applicationContext-quartz.xml" />
	<import resource="legendshop/applicationContext-util.xml" />
	<import resource="legendshop/applicationContext-cache.xml" />
	<import resource="legendshop/applicationContext-dwr.xml" />
	<import resource="legendshop/applicationContext-search.xml" />
	<import resource="legendshop/applicationContext-service.xml" />
	<import resource="legendshop/applicationContext-event.xml" />
	
	<!-- 权限管理部分 -->
	<import resource="legendshop/authentication/applicationContext-command.xml" />
	<import resource="legendshop/authentication/applicationContext-dao.xml" />
	<import resource="legendshop/authentication/applicationContext-processor.xml" />
	<import resource="legendshop/authentication/applicationContext-service.xml" />
	
	<!-- 权限部分，可以配置为cas，basic -->
	 <import resource="legendshop/security/applicationContext-basic.xml" />
	  <import resource="legendshop/security/applicationContext-security.xml" />
	
	<!-- 插件部分 -->
	<import resource="classpath*:/spring/legendshop/plugins/**/*-plugins.xml" />
	
		<!-- 属性文件读入 -->
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<!-- JDBC访问的用户名、密码等 -->
				<value>classpath*:config/*.properties</value>
			</list>
		</property>
	</bean>
	
	  <bean id="handlerManager" class="com.legendshop.core.helper.HandlerManager">
    	<property name="handlers">
    		      	<list>
      					<bean class="com.legendshop.business.helper.impl.EncodingHandler" >
      						<property name="encoding" value="UTF-8"></property>
      					</bean>
      					 <bean class="com.legendshop.business.helper.impl.IndependDomainHandler" >
      					 	<property name="shopService" ref="shopDetailService"></property>
      					</bean>
      					<!-- 
      					<bean class="com.legendshop.business.helper.impl.CookiesSSOHandler">
      						<property name="userDetailService" ref="userDetailService" />
      					</bean>
      					 -->
      				</list>
    	</property>
    </bean>
</beans>
   